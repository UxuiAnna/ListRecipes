<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.example.recipes.presentation.mainmenu.MainMenuFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainMenuFragment_to_RecipesTypeFragment"
            app:destination="@id/recipesTypeFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_recipesSearchFragment"
            app:destination="@id/recipesSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/pageRecipeFragment"
        android:name="com.example.recipes.presentation.pagerecipe.PageRecipeFragment"
        android:label="PageRecipeFragment" />
    <fragment
        android:id="@+id/recipesTypeFragment"
        android:name="com.example.recipes.presentation.recipestypefragment.RecipesTypeFragment"
        android:label="fragment_recipes_type"
        tools:layout="@layout/fragment_recipes_type">
        <argument
            android:name="type"
            app:argType="string" />
        <action
            android:id="@+id/action_recipesTypeFragment_to_pageRecipeFragment"
            app:destination="@id/pageRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipesSearchFragment"
        android:name="com.example.recipes.presentation.searchrecipes.RecipesSearchFragment"
        android:label="fragment_recipes_search"
        tools:layout="@layout/fragment_recipes_search" >
        <argument
            android:name="search"
            app:argType="string" />
    </fragment>
</navigation>