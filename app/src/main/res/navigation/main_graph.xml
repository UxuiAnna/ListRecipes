<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.listrecipies.ui.mainmenufragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/pageRecipeFragment"
        android:name="com.example.listrecipies.ui.listrecipesfragment.PageRecipeFragment"
        android:label="fragment_page_recipe"
        tools:layout="@layout/fragment_page_recipe" >
        <argument
            android:name="recipe"
            app:argType="com.example.listrecipies.data.Recipe" />
    </fragment>
    <fragment
        android:id="@+id/listRecipiesFragment"
        android:name="com.example.listrecipies.ui.listrecipesfragment.ListRecipesFragment"
        android:label="ListRecipiesFragment" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.listrecipies.ui.favorites.FavoritesFragment"
        android:label="FavoritesFragment" />
    <fragment
        android:id="@+id/purchasesFragment"
        android:name="com.example.listrecipies.ui.purchases.PurchasesFragment"
        android:label="fragment_purchases"
        tools:layout="@layout/fragment_purchases" />
</navigation>